<div class="py-4">
  <h2>Registro</h2>
  <hr class="w-50" />

  <form id="registrationForm" action="http://localhost:3000/api/skater" method="POST" enctype="multipart/form-data">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input name="email" class="form-control m-auto" type="email" required />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input name="nombre" class="form-control m-auto" type="text" required/>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input name="password" id="password" class="form-control m-auto" type="password" required />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input name="repite_password" id="repite_password" class="form-control m-auto" type="password" required />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Años de experiencia</label>
        <input name="anos_experiencia" class="form-control m-auto" type="number" required />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input name="especialidad" class="form-control m-auto" type="text" required/>
      </div>
      <div class="form-group col-12 col-sm-12">
        <label>Foto de perfil en formato JPG o JPEG con un peso menor a 6mb</label>
        <input name="foto" type="file" required/>
      </div>
    </div>
    <button type="submit" class="btn btn-info mb-3">Registrarme</button>
    <p><a href="/login"> Iniciar sesión</a></p>
  </form>

  <script>
    const form = document.querySelector("#registrationForm");
    const password = document.querySelector("#password");
    const repite_password = document.querySelector("#repite_password");

    form.addEventListener("submit", function(event) {
      if (password.value !== repite_password.value) {
        event.preventDefault();
        alert('La password debe coincidir');
        return false
      }
       alert('Skater registrado correctamente, redirigiendo a home');
        window.location.href = '/';
    });
  </script>
</div>

